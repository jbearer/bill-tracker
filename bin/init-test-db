#!/usr/bin/env bash
set -e

initdb -D db/test --no-locale -E UTF-8
pg_ctl -D db/test start
createdb app

# The user expected by the app, for integration testing.
psql -c "CREATE USER app" app

# A more powerful users for unit tests, with the ability to create new databases to isolate each
# test.
psql -c "CREATE USER test WITH CREATEDB" app

pg_ctl -D db/test stop
